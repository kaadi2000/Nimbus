# syntax=docker/dockerfile:1
FROM python:3.11-slim

WORKDIR /app
ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# System deps:
# - libportaudio2 / portaudio19-dev: needed by sounddevice
# - libasound2 + alsa-utils: audio stack
# - espeak-ng: common backend used by pyttsx3 on Linux
RUN apt-get update && apt-get install -y --no-install-recommends \
    libportaudio2 portaudio19-dev \
    libasound2 alsa-utils \
    espeak-ng \
    ca-certificates \
 && rm -rf /var/lib/apt/lists/*

# Install Python deps first (better layer caching)
COPY requirements.txt .
RUN pip install -r requirements.txt

# Copy the app
COPY . .

# Optional: download Vosk model during build (BIG ~1.8GB)
# Build with: docker build --build-arg DOWNLOAD_MODEL=true -t nimbus .
ARG DOWNLOAD_MODEL=false
RUN if [ "$DOWNLOAD_MODEL" = "true" ]; then python setup_model.py; fi

# Default run
CMD ["python", "main.py"]
